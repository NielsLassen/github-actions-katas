name: Reusable workflow
on:
  workflow_call:
    inputs:
      who-to-greet:
        description: 'Greeting to ...'
        default: 'World'
        required: false
        type: string
jobs:
  reusable-job:
    runs-on: ubuntu-latest
    steps:
      - name: Greet someone
        run: echo "Hello ${{ inputs.who-to-greet }}"
